<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal navbar-brand">
      <%= link_to "Akwabaa", root_path %>
    </h5>
    <nav class="my-2 my-md-0 mr-md-3">
      <%= link_to "Home", root_path, class:"p-2 text-dark" %>
      <%= link_to "Recent", root_path, class:"p-2 text-dark" %>
    </nav>
    <% if user_signed_in? %>
      <%= link_to "Upload", root_path, class:"p-2 text-light btn btn-primary" %>
      <%= link_to current_user.full_name, root_path, class:"btn" %>
      <%= link_to "Log Out", destroy_user_session_path, class:"btn", method: :delete %>
    <% else %>
    <%= link_to "Sign In", new_user_session_path, class:"btn mr-3" %>
    <%= link_to "Create an Account", new_user_registration_path, class:"btn" %>
    <% end %>
  </div>

